[Unit]
Description = Kodi Media Center

# if you don't need the MySQL DB backend, this should be sufficient
After = systemd-user-sessions.service network.target sound.target graphical-session.target

# if you need the MySQL DB backend, use this block instead of the previous
# After = systemd-user-sessions.service network.target sound.target mysql.service
# Wants = mysql.service

[Service]
User = kodi
Group = media
Type = simple
#PAMName = login # you might want to try this one, did not work on all systems
ExecStart = /usr/bin/xinit /usr/bin/dbus-launch --exit-with-session /usr/bin/flatpak run tv.kodi.Kodi -- :0 -nolisten tcp vt7
#ExecStart = /usr/bin/flatpak run tv.kodi.Kodi
Restart = on-abort
RestartSec = 5

[Install]
WantedBy = multi-user.target
#WantedBy = graphical-session.target
