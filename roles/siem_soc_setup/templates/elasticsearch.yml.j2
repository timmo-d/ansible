# elasticsearch.yml - secure single-node baseline
cluster.name: monitoring-cluster
node.name: node-1
network.host: {{ elasticsearch_bind_host }}
http.port: {{ elasticsearch_http_port }}

# Single-node discovery
discovery.type: single-node

# Security (enable built-in auth; configure TLS out-of-band)
xpack.security.enabled: {{ 'true' if elasticsearch_security_enable else 'false' }}
