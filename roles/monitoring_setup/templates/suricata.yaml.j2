%YAML 1.1
---
vars:
  address-groups:
    HOME_NET: "[{{ default_interface }}]"

default-rule-path: /etc/suricata/rules

rule-files:
  - suricata.rules

logging:
  default-log-level: info
  outputs:
    - console:
        enabled: yes
    - file:
        enabled: yes
        filename: /var/log/suricata/suricata.log

af-packet:
  - interface: {{ default_interface }}
    threads: auto
    cluster-id: 99
    cluster-type: cluster_flow
    defrag: yes
